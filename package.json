{
  "name": "narthex-crm-api",
  "version": "1.0.0",
  "description": "NarthexCRM GraphQL API",
  "main": "index.js",
  "scripts": {
    "dev": "CONFIG=config/dev.json ts-node-dev --inspect=9229 --transpile-only -r dotenv/config src/index.ts",
    "test": "jest --coverage",
    "generate": "graphql-codegen --config codegen.yml",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justin-cotarla/narthex-crm-api.git"
  },
  "keywords": [
    "typescript",
    "node",
    "graphql",
    "crm",
    "orthodox"
  ],
  "author": "Justin Cotarla",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/justin-cotarla/narthex-crm-api/issues"
  },
  "homepage": "https://github.com/justin-cotarla/narthex-crm-api#readme",
  "lint-staged": {
    "**/*.ts": [
      "tsc-files --noEmit",
      "eslint --cache --fix",
      "jest --bail --findRelatedTests"
    ]
  },
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^7.3.3",
    "@graphql-tools/load": "^7.4.1",
    "apollo-server": "^3.5.0",
    "argon2": "^0.28.3",
    "date-fns": "^2.27.0",
    "dotenv": "^10.0.0",
    "graphql": "^15.8.0",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "sql-formatter": "^4.0.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "@graphql-codegen/add": "^3.1.0",
    "@graphql-codegen/cli": "2.3.0",
    "@graphql-codegen/introspection": "2.1.0",
    "@graphql-codegen/typescript": "2.4.1",
    "@graphql-codegen/typescript-operations": "^2.2.1",
    "@graphql-codegen/typescript-resolvers": "2.4.2",
    "@graphql-tools/load-files": "^6.5.2",
    "@graphql-tools/merge": "^8.2.1",
    "@types/jest": "^27.0.3",
    "@types/mysql": "^2.15.19",
    "@types/node": "^16.11.12",
    "@typescript-eslint/eslint-plugin": "^5.6.0",
    "@typescript-eslint/parser": "^5.6.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-mock": "^27.4.2",
    "lint-staged": "^12.1.2",
    "prettier": "2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "tsc-files": "^1.1.3",
    "typescript": "^4.5.3"
  }
}
